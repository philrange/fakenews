<% picture = Picture.find(@website.picture_id) %>

<% content_for :title, @website.title %>
<% content_for :description, @website.description %>
<% content_for :image, image_path(picture.url) %>
<% content_for :url, @website.id.present? ? @website.id.to_s : nil %>

<%= render partial: 'header' %>


<h1><%= @website.title %></h1>
<%= image_tag picture.url, alt: picture.description, width: "300" %>
<h3><%= @website.description %></h3>

<div class='article'>
	<%= @website.text %>
</div>

<div class='tags'>
	<%= Keyword.find(@website.keyword_id).name %>
	<%= Keyword.find(@website.keyword_id).categories.map{|category| category.get_categories}.flatten %>
</div>